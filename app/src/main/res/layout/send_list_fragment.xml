<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_elevation"
    android:layout_marginHorizontal="@dimen/normal_margin"
    android:layout_marginTop="@dimen/small_margin"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendName"
            android:text="@string/sendName"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sendAmount"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendAmount"
            android:text="@string/sendAmount"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/sendName"
            app:layout_constraintBottom_toTopOf="@id/sendDate"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendDate"
            android:text="@string/sendDate"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/sendAmount"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>